{
  "Version": "2012-10-17",
  "Statement": [
    { 
      "Sid": "DescribeRead",
      "Effect": "Allow",
      "Action": [
        "ec2:Describe*",
        "tag:GetResources"
      ],
      "Resource": "*"
    },
    { 
      "Sid": "VpcAndSubnetCrud",
      "Effect": "Allow",
      "Action": [
        "ec2:CreateVpc","ec2:DeleteVpc","ec2:ModifyVpcAttribute",
        "ec2:CreateSubnet","ec2:DeleteSubnet","ec2:ModifySubnetAttribute"
      ],
      "Resource": "*"
    },
    {
      "Sid": "Tagging",
      "Effect": "Allow",
      "Action": ["ec2:CreateTags","ec2:DeleteTags"],
      "Resource": "*"
    }
  ]
}

